<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="520.0" prefWidth="600.0" styleClass="root" stylesheets="@../css/edit_entity_window_style.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.nure.model.controller.EditEntityWindowController">
    <children>
        <Label layoutX="58.0" layoutY="40.0" text="Entity:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
        <TextField fx:id="txtNameEntity" layoutX="68.0" layoutY="18.0" prefHeight="25.0" prefWidth="312.0"
                   AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="18.0"/>
        <TitledPane collapsible="false" layoutX="20.0" layoutY="110.0" text="Attributes" AnchorPane.bottomAnchor="60.0"
                    AnchorPane.topAnchor="80.0">
            <content>
                <ListView fx:id="listViewAttribute" layoutX="20.0" layoutY="71.0" prefHeight="260.0" prefWidth="260.0"
                          style="-fx-background-color: white;" AnchorPane.bottomAnchor="60.0"
                          AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="110.0"/>
            </content>
        </TitledPane>
        <Button fx:id="btnCancel" layoutX="18.0" layoutY="372.0" mnemonicParsing="false" onAction="#cancel"
                prefHeight="20.0" prefWidth="80.0" text="Cancel" AnchorPane.bottomAnchor="20.0"
                AnchorPane.rightAnchor="20.0"/>
        <Button defaultButton="true" layoutX="460.0" layoutY="375.0" mnemonicParsing="false"
                onAction="#saveEntity" prefHeight="20.0" prefWidth="80.0" text="OK" AnchorPane.bottomAnchor="20.0"
                AnchorPane.rightAnchor="220.0"/>
        <Button fx:id="btnAdd" layoutX="14.0" layoutY="375.0" mnemonicParsing="false" onAction="#newAttribute"
                prefHeight="20.0" prefWidth="80.0" text="Add" AnchorPane.bottomAnchor="20.0"
                AnchorPane.leftAnchor="20.0"/>
        <Button fx:id="btnDelete" layoutX="152.0" layoutY="375.0" mnemonicParsing="false"
                onAction="#deleteAttribute" prefHeight="20.0" prefWidth="80.0" text="Delete"
                AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="200.0"/>
        <TabPane layoutX="231.0" layoutY="80.0" prefHeight="200.0" prefWidth="200.0"
                 stylesheets="@../css/tab-pane-style.css" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="60.0"
                 AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
            <tabs>
                <Tab text="General">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <CheckBox fx:id="isPK" layoutX="14.0" layoutY="14.0" mnemonicParsing="false"
                                          text="Primary Key" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0"/>
                                <CheckBox fx:id="isNN" layoutX="14.0" layoutY="44.0" mnemonicParsing="false"
                                          text="Not Null" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="40.0"/>
                                <CheckBox fx:id="isAI" layoutX="14.0" layoutY="77.0" mnemonicParsing="false"
                                          text="Auto Increment" AnchorPane.leftAnchor="10.0"
                                          AnchorPane.topAnchor="70.0"/>
                                <CheckBox fx:id="isUI" layoutX="24.0" layoutY="87.0" mnemonicParsing="false"
                                          text="Unique" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="100.0"/>
                                <Label layoutX="14.0" layoutY="126.0" text="Description:" AnchorPane.leftAnchor="10.0"
                                       AnchorPane.topAnchor="130.0"/>
                                <TextArea fx:id="txaInfo" layoutX="25.0" layoutY="158.0" wrapText="true"
                                          AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                                          AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="155.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Domain">
                    <content>
                        <AnchorPane fx:id="arpDatatype" minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                                    prefWidth="200.0">
                            <children>
                                <ComboBox fx:id="cmbDatatype" layoutX="14.0" layoutY="14.0" prefWidth="150.0"
                                          promptText="Datatype" AnchorPane.leftAnchor="10.0"
                                          AnchorPane.topAnchor="10.0"/>
                                <Label layoutX="10.0" layoutY="54.0" text="Size:" AnchorPane.leftAnchor="10.0"
                                       AnchorPane.topAnchor="54.0"/>
                                <TextField fx:id="txtDataSize" layoutX="60.0" layoutY="50.0" prefWidth="60.0"
                                           AnchorPane.leftAnchor="70.0" AnchorPane.topAnchor="50.0"/>
                                <Label layoutX="14.0" layoutY="94.0" text="Default:" AnchorPane.leftAnchor="10.0"
                                       AnchorPane.topAnchor="94.0"/>
                                <TextField fx:id="txtDefValue" layoutX="73.0" layoutY="86.0" prefWidth="60.0"
                                           AnchorPane.leftAnchor="70.0" AnchorPane.topAnchor="90.0"/>
                                <Label layoutX="141.0" layoutY="54.0" text="Min:" AnchorPane.leftAnchor="155.0"
                                       AnchorPane.topAnchor="54.0"/>
                                <TextField fx:id="txtDataMin" layoutX="169.0" layoutY="50.0" prefWidth="70.0"
                                           AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0"/>
                                <TextField fx:id="txtDataMax" layoutX="163.0" layoutY="90.0" prefWidth="70.0"
                                           AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="90.0"/>
                                <Label layoutX="135.0" layoutY="94.0" text="Max:" AnchorPane.leftAnchor="155.0"
                                       AnchorPane.topAnchor="94.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Foreign Key">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ComboBox fx:id="cmbRefTable" layoutX="115.0" layoutY="14.0" prefWidth="150.0"
                                          promptText="&lt;empty&gt;" AnchorPane.rightAnchor="10.0"
                                          AnchorPane.topAnchor="14.0"/>
                                <Label layoutX="10.0" layoutY="18.0" text="Reference:" AnchorPane.leftAnchor="10.0"
                                       AnchorPane.topAnchor="18.0"/>
                                <Label layoutX="10.0" layoutY="88.0" text="On Update:" AnchorPane.leftAnchor="10.0"
                                       AnchorPane.topAnchor="58.0"/>
                                <ComboBox fx:id="cmbOnUpdate" layoutX="80.0" layoutY="84.0" prefWidth="150.0"
                                          promptText="No action" AnchorPane.rightAnchor="10.0"
                                          AnchorPane.topAnchor="54.0"/>
                                <ComboBox fx:id="cmbOnDelete" layoutX="80.0" layoutY="124.0" prefWidth="150.0"
                                          promptText="No action" AnchorPane.rightAnchor="10.0"
                                          AnchorPane.topAnchor="94.0"/>
                                <Label layoutX="10.0" layoutY="128.0" text="On Delete:" AnchorPane.leftAnchor="10.0"
                                       AnchorPane.topAnchor="98.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
